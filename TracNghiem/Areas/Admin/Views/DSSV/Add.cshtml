@model List<TracNghiem.Models.LOPHOCPHAN>
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/HomeAdmin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/admin/DSSV/Add" class="nav-link">Add</a>
        </li>
    </ul>
}

<h2 style="text-align:center">THÊM DANH SÁCH SINH VIÊN</h2>
<div>
    <label for="subjectName" class="form-label">Tên Lớp Học:</label>
    <select id="subjectName" name="subjectName" class="form-input" required>
        <option value="" disabled selected>Chọn lớp học</option>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <option value="@item.MALOPHOCPHAN">@item.TENLOPHOCPHAN</option>
            }
        }
    </select>
</div>
<form id="uploadForm" enctype="multipart/form-data" method="post" action="@Url.Action("Add", "DSSV")">
    <div class="form-group">
        <label for="excelFile">Chọn file Excel:</label>
        <input type="file" id="excelFile" name="excelFile" class="form-control" accept=".xlsx,.xls" />
    </div>
    <input type="hidden" name="subjectName" id="subjectNameHidden">
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#subjectName').change(function () {
                $('#subjectNameHidden').val($(this).val());
            });
        });
    </script>
}
