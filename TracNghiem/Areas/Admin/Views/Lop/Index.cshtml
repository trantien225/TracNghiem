@model List<TracNghiem.Models.LOPHOCPHAN>

@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/HomeAdmin" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/admin/lop/Index" class="nav-link">DS_LOP</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="text-uppercase">Danh sách lớp học phần</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Admin/HomeAdmin">Home</a></li>
                    <li class="breadcrumb-item active">DS_LOP</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title text-uppercase">Danh sách sinh viên</h3>
            <div class="card-tools">
                <a href="/Admin/Users/Regisster" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>MALOPHP</th>
                        <th>TENLOPHP</th>
                        <th>MAHOCPHAN</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MALOPHOCPHAN</td>
                                <td>@item.TENLOPHOCPHAN</td>
                                <td>@item.MAHOCPHAN</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4"> Không có bản ghi nào</td>
                        </tr>
                    }

                </tbody>
            </table>
            <div class="row">
                <div class="col-6"></div>
            </div>
        </div>
    </div>
</section>
